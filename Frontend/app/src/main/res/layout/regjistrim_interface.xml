<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtexture"
    >

    <View

        android:id="@+id/iconZanatciu"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo1"

        />

    <LinearLayout
        android:id="@+id/firstRegjistrimRow"
        android:layout_below="@+id/iconZanatciu"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Emri:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"

            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/secondRegjistrimRow"
        android:layout_below="@+id/firstRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >


        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Mbiemri:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRegjistrimRow"
        android:layout_below="@+id/secondRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Profesioni:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/forthRegjistrimRow"
        android:layout_below="@+id/thirdRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Email:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifthRegjistrimRow"
        android:layout_below="@+id/forthRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Nr Telefoni:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/sixthRegjistrimRow"
        android:layout_below="@+id/fifthRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Fjalekalimi:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/seventhRegjistrimRow"
        android:layout_below="@+id/sixthRegjistrimRow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Perserit \nFjalekalimin:"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"


            />

        <EditText
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/whiteovalbackground"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btnRegisterHere"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/seventhRegjistrimRow"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonsbackground"
        android:layout_marginTop="20dp"
        android:text="Regjistro"
        android:textSize="12sp"
        android:textColor="#fff"
        />


</RelativeLayout>