<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/backgroundtexture">


    <RelativeLayout
        android:id="@+id/relativeLayoutInfoPunedhenes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/whiteovalbackground"
        >

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo1"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"
            android:layout_centerVertical="true"
            android:onClick="goProfile"/>



     <TextView
         android:id="@+id/label"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_toRightOf="@id/profile_image"
         android:text="Emri:"
         android:textAlignment="center"
         android:layout_marginLeft="30dp"
         android:textColor="#000000"
         android:gravity="center"
         android:textSize="18sp"
         android:layout_alignTop="@id/profile_image"/>


        <TextView
            android:id="@+id/emriTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/label"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/whiteovalbackground"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignTop="@id/profile_image"/>



    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relativeLayoutInfoPuna"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@id/relativeLayoutInfoPunedhenes"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/whiteovalbackground"
        >

    <TextView
        android:id="@+id/titleInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="PERSHKRIMI I PUNES"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textAlignment="center"
        android:gravity="center"/>



        <TextView
            android:id="@+id/textArea"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/titleInfo"
            android:text="PERSHKRIMI I PUNES"
            android:background="@drawable/whiteovalbackground"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/cmimi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textArea"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="Cmimi"
            android:background="@drawable/whiteovalbackground"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutButonat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutInfoPuna"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <Button
            android:id="@+id/aplikimeButton"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="APLIKIME"
            android:layout_alignParentLeft="true"
            android:background="@drawable/buttonsbackground"
            android:textSize="12sp"
            android:textColor="#fff"/>



        <Button
            android:id="@+id/aplikoButton"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="APLIKO"
            android:background="@drawable/buttonsbackground"
            android:textSize="12sp"
            android:textColor="#fff"/>

    </RelativeLayout>

</RelativeLayout>