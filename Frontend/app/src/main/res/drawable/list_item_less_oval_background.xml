<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#004F81"/>
            <stroke
                    android:width="0.5dp"
                    android:color="#000"/>
            <corners
                    android:radius="10dp"/>

            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>

            <margin
                    android:left="10dp"
                    android:top="0dp"
                    android:right="10dp"
                    android:bottom="0dp"/>

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:startColor="#fff"
                    android:endColor="#fff"
                    android:angle="270"/>
            <stroke
                    android:width="0.2dp"
                    android:color="#000"/>
            <corners
                    android:radius="10dp"/>

            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>

            <margin
                    android:left="10dp"
                    android:top="0dp"
                    android:right="10dp"
                    android:bottom="0dp"/>

        </shape>
    </item>

</selector>